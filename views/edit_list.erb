<!doctype html>


<section id="todos">
	<header>
		<h2>Editing "<%=@list[:name] %>"</h2>
		<ul>
			<li>
				<form action="/lists/<%=@id%>/delete" method="post">
					<button type="submit" class="delete"> Delete List </button>
				</form>
			</li>
		</ul>
	</header>
</section>

<form action="/lists/<%=@id%>" method="post">
	<dl>
		<dt>
			<label for="list_name"> Enter the new name of your list: </label>
		</dt>
			<dd>
				<input name="list_name" placeholder="List Name" type="text" value="<%=@list[:name] || params[:list_name]%>">
			</dd>
	</dl>
	<fieldset class="actions">
		<input type="submit" value="Save">
		<a href="/lists/<%= params[:id]%>">Cancel</a>
	</fieldset>
</form>
